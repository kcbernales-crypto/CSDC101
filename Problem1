#include <iostream>
using namespace std;

int main() 
{
    int customers_money;
    
    cout << "How much money do you have, sir/ma'am?";
    cin >> customers_money;
    
    if (customers_money >= 1) {
        cout << "Enjoy your lemonade!";
    }
    
    else {
        cout << "Sorry, you need more money.";
    }

    return 0;
    
}
