#include <iostream>
using namespace std;

int main () {
    char conversion;
    float tempvalue, F, C;
    
    bool invalid = true;    
    
    while (invalid) { // while loop
        cout << "Choose your conversion type.\n";
        cout << "\nEnter a for Celsius to Fahrenheit";
        cout << "\nEnter b for Fahrenheit to Celsius";
        cout << "Enter choice:";
        cin >> conversion; // the letter for the conversion
        
        cout << endl;
        
        switch (conversion) {
            case 'A':
            case 'a':
                cout << "\nTemperature value: "; 
                cin >> tempvalue;
                F = (tempvalue * 9/5) + 32; // the operation for conversion of C to F
                cout << tempvalue << "째C = " << F << "째F"; // displays the whole conversion
                invalid = false;
                break;
                
            case 'B':
            case 'b':
                cout << "\nTemperature value: ";
                cin >> tempvalue;
                C = (tempvalue - 32) * 5/9; // the operation for conversion of F to C
                cout << tempvalue << "째F = " << C << "째C"; // displays the
                invalid = false;
                break;
                
            default:
                cout << "Invalid choice. Pick only between a and b";
                continue;
        }
        cout << endl;
    }
}
